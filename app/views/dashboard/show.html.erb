<%= render 'shared/navbar' %>
<div class="page-content" id="content">
  <%= render 'shared/topbar' %>
  <div class="wrapper" id="dashboard_wrapper">

  <h1 id="date"> <%= Time.now.strftime("%A, %B %d")%> </h1>

    <div class="card_container">
      <div class=card_rtime>
      <h4>Remaining Time</h4>
      <p>This week</p>
      <h1><%= @hours_left.round %> Hours</h1>
      </div>

      <h1>Categories </h1> <%@hours_by_category.keys.each do |key| %>
       <h2> <%= key %> </h2>
       <h2> You scheduled <%= @hours_by_category[key] %> hours
      <%  gc = Category.find_by(name: key) %>
      <% user_goals = Goal.where(user: current_user, category: gc) %>
      <% user_goals.each do |goal| %>
      <% goal.goaltime.strftime("%H") %>
       on your goal of <%= goal.goaltime.strftime("%H")  %> hours </h2>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
