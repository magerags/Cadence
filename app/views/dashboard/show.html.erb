<%= render 'shared/navbar' %>
<div class="page-content" id="content">

  <%= render 'shared/topbar' %>
    <div class="wrapper" id="dashboard_wrapper">
      <h1> <%= Time.now.strftime("%A, %B %d")%> </h1>
      <br>
      <br>
      <div>
        <h2> Remaining free time this week: <%= @hours_left.round %> hours </h2>
      </div>
      <br>
      <br>
      <h1>Categories </h1>
      <%@hours_by_category.keys.first(5).each do |key| %>
        <h2> <%= key %> </h2>

        <%  gc = Category.find_by(name: key) %>
        <% user_goals = Goal.where(user: current_user, category: gc) %>
        <% user_goals.each do |goal| %>
          <% time = (goal.goaltime.hour) -  @hours_by_category[key] %>
          <% percentage =  (@hours_by_category[key] / (goal.goaltime.hour)) * 100  %>
          <h2>You have  <%= time  %> hour(s) left on your goal for the week </h2>
          <div class="progress w3-progress-container w3-round-xlarge">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: <%= percentage %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        <% end %>
      <% end %>
    </div>
</div>
