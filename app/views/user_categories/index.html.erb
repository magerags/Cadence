<%= render 'shared/navbar' %>
<div class="page-content" id="content">
<%= render 'shared/topbar' %>
<div class="wrapper" id="dashboard_wrapper">
<h2> This your default categories </h2>
<% @categories.each do |category| %>
<h3><%= category.name %> </h3>
<% end %>
<br>

<h2> This is your own categories </h2>
<% @user_categories.each do |category| %>
<H3><%= category.name %>
<%= link_to user_category_path(category), method: :delete, data: { confirm: 'Are you sure?'} do %>
<i class="fas fa-minus-circle"></i>
<% end %> </H3>
<% end %>
<p> <%= link_to "New", new_user_category_path %> </p>
<p> <%= link_to "Goals", goals_path%>
</div>
</div>
