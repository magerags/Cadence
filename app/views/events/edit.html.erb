<%= render 'shared/navbar' %>
<div class="page-content p-5" id="content">
<%= simple_form_for @event do |f| %>
<%= f.association :category %>
<%= f.input :name %>
<%= f.input :description%>
<%= f.input :starting_time%>
<%= f.input :ending_time%>
<%= hidden_field_tag :date, params[:date] if params[:date] %>
<%= f.submit %>
<% end %>
</div>
